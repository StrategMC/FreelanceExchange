<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Модерация заказов</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            padding: 20px;
            background-color: #f8f9fa;
        }
        .container {
            max-width: 1200px;
            margin-top: 20px;
        }
        h2 {
            margin-bottom: 20px;
        }
        .card {
            transition: transform 0.2s;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            overflow: hidden;
            height: 100%;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #f8f9fa !important;
        }
        .description-container {
            position: relative;
            margin-bottom: 15px;
        }
        .read-more-btn {
            color: #0d6efd;
            text-decoration: underline;
            cursor: pointer;
            font-size: 0.9rem;
            padding: 0;
            border: none;
            background: none;
        }
        .read-more-btn:hover {
            text-decoration: none;
        }
        .card-footer {
            background-color: white;
            border-top: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mb-4">Модерация заказов</h2>

        @if (Model.Orders != null)
        {
                <div class="row">
                @foreach (var order in Model.Orders)
                {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-header bg-light">
                                        <h5 class="card-title mb-0">@order.Title</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between mb-3">
                                            <span class="badge bg-primary">ID: @order.Id</span>
                                            <span class="text-success fw-bold">@order.Price $</span>
                                        </div>

                                        <div class="description-container mb-3">
                                    @{
                                        var shortDescription = order.Description.Length > 150
                                            ? order.Description.Substring(0, 150) + "..."
                                            : order.Description;
                                    }
                                            <p class="card-text short-description">@shortDescription</p>
                                    @if (order.Description.Length > 150)
                                    {
                                                    <p class="card-text full-description" style="display: none;">@order.Description</p>
                                                    <button class="btn btn-link p-0 read-more-btn">Читать полностью</button>
                                    }
                                        </div>
                                    </div>
                                    <div class="card-footer bg-white border-top-0">
                                        <div class="d-flex justify-content-between">
                                            <form asp-action="ApproveOrder" asp-route-id="@order.Id" method="post">
                                                <button type="submit" class="btn btn-success">
                                                    <i class="bi bi-check-circle"></i> Одобрить
                                                </button>
                                            </form>
                                            <form asp-action="RejectOrder" asp-route-id="@order.Id" method="post">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-x-circle"></i> Отклонить
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                }
                </div>
        }
        else
        {
                <div class="alert alert-info">
                    Нет заказов для модерации
                </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.read-more-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const container = this.closest('.description-container');
                    const shortDesc = container.querySelector('.short-description');
                    const fullDesc = container.querySelector('.full-description');

                    if (fullDesc.style.display === 'none') {
                        fullDesc.style.display = 'block';
                        shortDesc.style.display = 'none';
                        this.textContent = 'Свернуть';
                    } else {
                        fullDesc.style.display = 'none';
                        shortDesc.style.display = 'block';
                        this.textContent = 'Читать полностью';
                    }
                });
            });
        });
    </script>
</body>
</html>