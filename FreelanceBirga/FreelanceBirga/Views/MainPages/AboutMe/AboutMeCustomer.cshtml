@page
@model FreelanceBirga.Models.VM.CustomerViewModel
@{
    ViewData["Title"] = "Обо мне";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2>Профиль заказчика</h2>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-2 font-weight-bold">Никнейм:</div>
                <div class="col-md-10">@Model.Username</div>
            </div>
            <div class="row mb-3">
                <div class="col-md-2 font-weight-bold">Описание:</div>
                <div class="col-md-10">@Model.Description</div>
            </div>
        </div>
        <div class="card-footer">
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Назад
            </a>
        </div>
    </div>
</div>

@section Styles {
        <style>
            .card {
                max-width: 800px;
                margin: 0 auto;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }
            .card-header {
                font-size: 1.5rem;
            }
            .font-weight-bold {
                font-weight: 600;
            }
        </style>
}