<body>
    <h1 style="color: #2c3e50; text-align: center; margin: 30px 0;">Добро пожаловать!</h1>

    @if (ViewBag.ExecutorRole)
    {
        <div style="max-width: 800px; margin: 0 auto; padding: 20px;">
            <h2 style="color: #3498db; border-bottom: 2px solid #3498db; padding-bottom: 10px;">Меню исполнителя</h2>
            <div style="display: flex; gap: 20px; margin-top: 30px;">
                <a href="/AboutMe/AboutMeExecutor"
                   style="flex: 1; padding: 25px;
                          background: #f8f9fa; border-radius: 12px;
                          text-decoration: none; color: #2c3e50;
                          box-shadow: 0 3px 6px rgba(0,0,0,0.1);
                          transition: transform 0.2s, box-shadow 0.2s;
                          text-align: center;">
                    <i class="fas fa-user fa-2x" style="display: block; margin-bottom: 10px; color: #3498db;"></i>
                    Мой профиль
                </a>
                <a href="/Orders/SearchOrders"
                   style="flex: 1; padding: 25px;
                          background: #f8f9fa; border-radius: 12px;
                          text-decoration: none; color: #2c3e50;
                          box-shadow: 0 3px 6px rgba(0,0,0,0.1);
                          transition: transform 0.2s, box-shadow 0.2s;
                          text-align: center;">
                    <i class="fas fa-tasks fa-2x" style="display: block; margin-bottom: 10px; color: #3498db;"></i>
                    Поиск заказов
                </a>
            </div>
        </div>
    }
    else if (ViewBag.CustomerRole)
    {
        <div style="max-width: 800px; margin: 0 auto; padding: 20px;">
            <h2 style="color: #27ae60; border-bottom: 2px solid #27ae60; padding-bottom: 10px;">Меню заказчика</h2>
            <div style="display: flex; gap: 20px; margin-top: 30px; flex-wrap: wrap;">
                <a href="/AboutMe/AboutMeCustomer"
                   style="flex: 1; min-width: 250px; padding: 25px;
                          background: #f8f9fa; border-radius: 12px;
                          text-decoration: none; color: #2c3e50;
                          box-shadow: 0 3px 6px rgba(0,0,0,0.1);
                          transition: transform 0.2s, box-shadow 0.2s;
                          text-align: center;">
                    <i class="fas fa-id-card fa-2x" style="display: block; margin-bottom: 10px; color: #27ae60;"></i>
                    Мой профиль
                </a>
                <a href="/SearchWindows/SearchExecutorWindow"
                   style="flex: 1; min-width: 250px; padding: 25px;
                          background: #f8f9fa; border-radius: 12px;
                          text-decoration: none; color: #2c3e50;
                          box-shadow: 0 3px 6px rgba(0,0,0,0.1);
                          transition: transform 0.2s, box-shadow 0.2s;
                          text-align: center;">
                    <i class="fas fa-users fa-2x" style="display: block; margin-bottom: 10px; color: #27ae60;"></i>
                    Исполнители
                </a>
                <a href="/Orders/AddOrders"
                   style="flex: 1; min-width: 250px; padding: 25px;
                          background: #f8f9fa; border-radius: 12px;
                          text-decoration: none; color: #2c3e50;
                          box-shadow: 0 3px 6px rgba(0,0,0,0.1);
                          transition: transform 0.2s, box-shadow 0.2s;
                          text-align: center;">
                    <i class="fas fa-plus-circle fa-2x" style="display: block; margin-bottom: 10px; color: #27ae60;"></i>
                    Новый заказ
                </a>
                <a href="/Orders/MyOrders"
                   style="flex: 1; min-width: 250px; padding: 25px;
                          background: #f8f9fa; border-radius: 12px;
                          text-decoration: none; color: #2c3e50;
                          box-shadow: 0 3px 6px rgba(0,0,0,0.1);
                          transition: transform 0.2s, box-shadow 0.2s;
                          text-align: center;">
                    <i class="fas fa-clipboard-list fa-2x" style="display: block; margin-bottom: 10px; color: #27ae60;"></i>
                    Мои заказы
                </a>
            </div>
        </div>
    }
    else
    {
        <div style="max-width: 500px; margin: 50px auto; padding: 40px;
             background: #fff; border-radius: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1);
             text-align: center;">
            <h2 style="color: #e74c3c; margin-bottom: 30px;">Пожалуйста, выберите роль</h2>
            <form method="post" action="/MainPages/OpenExexutorRegestration" style="display: flex; flex-direction: column; gap: 20px;">
                <div>
                    <label for="role" style="display: block; margin-bottom: 10px; color: #34495e;">Выберите роль:</label>
                    <select id="role" name="role"
                            style="width: 100%; padding: 12px; border: 2px solid #bdc3c7;
                                   border-radius: 8px; font-size: 16px; transition: border-color 0.3s;">
                        <option value="Executor">Исполнитель</option>
                        <option value="Customer">Заказчик</option>
                    </select>
                </div>
                <button type="submit"
                        style="background: #3498db; color: white; padding: 15px 30px;
                               border: none; border-radius: 8px; font-size: 16px;
                               cursor: pointer; transition: background 0.3s;">
                    Продолжить регистрацию
                </button>
            </form>
        </div>
    }
</body>