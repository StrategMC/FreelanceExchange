<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FreelanceBirga</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FreelanceBirga.styles.css" asp-append-version="true" />
    <style>
        .nav-user-section {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .logout-form {
            margin: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="MainPages" asp-action="MainPage">FreelanceBirga</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto">
                        <!-- Основные пункты меню можно добавить здесь -->
                    </ul>

                    <ul class="navbar-nav">
                        @{
                            var userId = Context.Session.GetInt32("UserId");
                        }

                        @if (userId != null)
                        {
                                <li class="nav-item nav-user-section">
                                   @*  <span class="nav-link text-dark">@username</span> *@
                                    <form class="logout-form" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Выйти</button>
                                    </form>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Autorization">Войти</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Registration">Регистрация</a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FreelanceBirga, Арсений Мурин П-2206
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>