
@model List<FreelanceBirga.Models.DB.OrdersChat>

<h2>Список чатов</h2>

<table class="table">
    @if (!Model.Any())
    {
            <div class="alert alert-info">Чатов не найдено</div>
    }
   else
   {
    <thead>
        <tr>
            <th>ID чата</th>
            <th>ID заказа</th>
            <th>Заказчик</th>
            <th>Исполнитель</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
      
       
        @foreach (var chat in Model)
        {
                <tr>
                    <td>@chat.Id</td>
                    <td>@chat.OrderId</td>
                    <td>@chat.CustomerId</td> 
                    <td>@chat.ExecutorId</td> 
                    <td>
                    @switch (chat.Status)
                    {
                        case 0:
                            <span class="badge badge-secondary">Неактивен</span>
                            break;
                        case 1:
                            <span class="badge badge-success">Активен</span>
                            break;
                        case 2:
                            <span class="badge badge-warning">Архив</span>
                            break;
                        default:
                            <span class="badge badge-info">Неизвестно</span>
                            break;
                    }
                    </td>
                    <td>
                        <a href="@Url.Action("Details", "Chat", new { id = chat.Id })" class="btn btn-primary btn-sm">Открыть</a>
                    </td>
                </tr>
        
        }
    </tbody>
   }
</table>
