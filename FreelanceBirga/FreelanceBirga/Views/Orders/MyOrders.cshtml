@model FreelanceBirga.Models.VM.MyOrderViewModel

@{
    ViewBag.Title = "Мои заказы";
}

<h2>Заказы на модерации</h2>
@if (Model.tempOrders.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.tempOrders)
            {
                <tr>
                    <td>@order.Title</td>
                    <td>@order.Description</td>
                    <td>@order.Price $</td>
                    <td>На модерации</td>
                    <td>
                        <a href="@Url.Action("CancelTempOrder", "Orders", new { id = order.Id })"
                           class="btn btn-danger"
                           onclick="return confirm('Вы уверены, что хотите отменить заказ?');">
                            Отменить
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет заказов на модерации</p>
}

<h2>Активные заказы</h2>
@if (Model.orders.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Описание</th>
                <th>Цена</th>
                <th>Статус</th> <!-- Добавлена колонка статуса -->
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.orders)
            {
                <tr>
                    <td>@order.Title</td>
                    <td>@order.Description</td>
                    <td>@order.Price $</td>
                    <!-- Колонка статуса -->
                    <td>
                        @if (order.Redy)
                        {
                            <span>Готов</span>
                        }
                        else if (order.InWork)
                        {
                            <span>В работе</span>
                        }
                        else
                        {
                            <span>Не в работе</span>
                        }
                    </td>
                    <td>
                        @if (!order.InWork && !order.Redy)
                        {
                            <a href="@Url.Action("CancelOrder", "Orders", new { id = order.Id })"
                               class="btn btn-danger"
                               onclick="return confirm('Вы уверены, что хотите отменить заказ?');">
                                Отменить
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>Отменить</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет активных заказов</p>
}